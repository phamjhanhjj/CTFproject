<Window x:Class="CTFproject.dangnhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTFproject"
        mc:Ignorable="d"
        Title="Đăng Nhập" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/backfround.jpg"/>
        </Grid.Background>
        <TextBox x:Name="email_text" Height="39" Margin="200,96,200,0" Text="Email" VerticalAlignment="Top" TextChanged="TextBox_TextChanged" TextWrapping="Wrap"/>
        <TextBox x:Name="password_text" Height="39" Margin="200,158,200,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="login_bt" Content="Đăng nhập" Height="39" Margin="200,224,200,0" VerticalAlignment="Top" FontSize="18" Background="#FFDDDDDD" Click="login_bt_Click" Foreground="Black"/>
        <Label Content="CTF LOGIN" Margin="282,21,282,343" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="#FFF8FFF8"/>
        <Label Content="Chưa có tài khoản?" Height="39" Margin="231,346,400,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="18"/>
        <Button x:Name="register_bt" Content="Đăng ký" Height="39" Margin="405,346,235,0" VerticalAlignment="Top" FontSize="18" Click="register_bt_Click"/>
        <Button x:Name="forgot_bt" Content="Quên mật khẩu" Height="39" Margin="200,290,200,0" VerticalAlignment="Top" FontSize="18" Click="forgot_bt_Click"/>

    </Grid>
</Window>
